<div class="row">
  <div class="col s5"></div>
  <div class="col s5"></div>
  <div class="col s2">
    <a id="notice"><%= notice %></a>
  </div>
</div>
<div class="row" id="intro">
  <div class="col s5">
     <h4>Projetos Cadastrados</h4>
  </div>
  <div class="col s2">
    <div class="add_button">
      <a class="btn-floating btn-large" href="/projects/new">
        <i class="material-icons">add</i>
      </a>
    </div>
  </div>
  <div class="col s5">
  </div>
</div>
<div class="row">
      <table>
        <thead>
          <tr>
            <th>Nome do Projeto</th>
            <th>Tipo de Serviço</th>
            <th>Cliente Associado</th>
            <th>Gerente do Projeto</th>
            <th>Valor do Projeto</th>
            <th>Data de primeiro contato</th>
            <th>Data de assinatura</th>
            <th>Data prevista de conclusão</th>
            <th>Data real de conclusão</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.project_name %></td>
              <td>
                <% @service = Service.find(project.service_id) %>
                <%= @service.name%>
              </td>
              <td>
                <% @customer = Customer.find(project.customer_id) %>
                <%= @customer.name%>
              </td>
              <td>
                <% @user = User.find(project.user_id) %>
                <%= @user.user_name%>
              </td>
                <td><%= project.project_value %></td>
              <td><%= project.first_contact %></td>
              <td><%= project.signature_date %></td>
              <td><%= project.expected_conclusion_date %></td>
              <td><%= project.project_conclusion_date %></td>
              <td><%= link_to 'Mostrar', project %></td>
              <td><%= link_to 'Editar', edit_project_path(project) %></td>
              <td><%= link_to 'Remover', project, method: :delete, data: { confirm: 'Você tem certeza que deseja remover esse projeto?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>



<br>
