<div class="row">
  <div class="col s5"></div>
  <div class="col s5"></div>
  <div class="col s2">
    <a id="notice"><%= notice %></a>
  </div>
</div>

<div class="row" id="intro">
  <div class="col s5">
    <h4>Serviços Cadastrados</h4>
  </div>
  <div class="col s2">
    <div class="add_button">
      <a class="btn-floating btn-large" href="/services/new">
        <i class="material-icons">add</i>
      </a>
    </div>
  </div>
  <div class="col s5">
  </div>
</div>

<div class="row">
  <table>
    <thead>
      <tr>
        <th>Nome do Serviço</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= link_to 'Mostrar', service %></td>
          <td><%= link_to 'Editar', edit_service_path(service) %></td>
          <td><%= link_to 'Remover', service, method: :delete, data: { confirm: 'Você tem certeza que deseja remover esse serviço?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
