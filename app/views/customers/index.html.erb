<div class="row">
  <div class="col s5"></div>
  <div class="col s5"></div>
  <div class="col s2">
    <a id="notice"><%= notice %></a>
  </div>
</div>

<div class="row" id="intro">
  <div class="col s5">
    <h4>Clientes Cadastrados</h4>
  </div>
  <div class="col s2">
    <div class="add_button">
      <a class="btn-floating btn-large" href="/customers/new">
        <i class="material-icons">add</i>
      </a>
    </div>
  </div>
  <div class="col s5">
  </div>
</div>

<div class="row">
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>CNPJ/CPF</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Nome Fantasia</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.cnpj %></td>
          <td><%= customer.email %></td>
          <td><%= customer.telephone %></td>
          <td><%= customer.fantasy_name %></td>
          <td><%= link_to 'Mostrar', customer %></td>
          <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
          <td><%= link_to 'Remover', customer, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja remover esse cliente?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
