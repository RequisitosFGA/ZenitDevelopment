<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag 'Nome do Cliente' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= label_tag 'CNPJ ou CPF' %>
    <%= f.text_field :cnpj %>
  </div>

  <div class="field">
    <%= label_tag 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= label_tag 'Telefone' %>
    <%= f.text_field :telephone %>
  </div>

  <div class="field">
    <%= label_tag 'Nome Fantasia (Caso possua)' %>
    <%= f.text_field :fantasy_name %>
  </div>

  <div class="actions">
  <a class="waves-effect waves-light btn"><%= f.submit "Salvar Cliente" %></a>
  </div>
<% end %>
